---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="zh">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="我的个人博客" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header>
			<nav>
				<a href="/">首页</a>
				<a href="/blog">博客</a>
				<a href="/about">关于我</a>
			</nav>
		</header>
		<main>
			<slot />
		</main>
		<footer>
			<p>&copy; 2023 我的个人博客. 保留所有权利。</p>
		</footer>
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		background: #f6f6f6;
		color: #333;
	}
	body {
		max-width: 800px;
		margin: 0 auto;
		padding: 20px;
		line-height: 1.6;
	}
	header {
		margin-bottom: 2rem;
	}
	nav {
		display: flex;
		gap: 1rem;
	}
	nav a {
		color: #333;
		text-decoration: none;
		font-weight: bold;
	}
	nav a:hover {
		color: rgb(var(--accent));
	}
	h1 {
		font-size: 2.5rem;
		color: rgb(var(--accent));
	}
	footer {
		margin-top: 2rem;
		text-align: center;
		font-size: 0.8rem;
		color: #666;
	}
</style>